<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/main_relativelayout_header"
    android:background="@color/white">
    <ImageView
        android:id="@+id/main_head_logo"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@mipmap/drawer_toggle"/>

    <TextView
        android:id="@+id/main_head_title"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:padding="5dip"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="首页"/>


    <ImageView
        android:id="@+id/main_head_loginbutton"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:padding="10dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/frame_icon_account"/>

    <ImageView
        android:id="@+id/main_head_searchbutton"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:padding="10dip"
        android:layout_toRightOf="@+id/main_head_logo"
        android:src="@mipmap/frame_icon_search" />
</RelativeLayout>