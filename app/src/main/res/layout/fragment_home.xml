<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <FrameLayout android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <View
                    android:id="@+id/center"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_centerInParent="true"/>

                <View
                    android:id="@+id/centerY"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_marginBottom="30dip"
                    android:layout_centerVertical="true"
                    android:layout_above="@id/center"/>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/centerY"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RelativeLayout
                    android:id="@+id/change"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:background="#20000000"
                    android:layout_alignBottom="@id/viewPager">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dip"
                        android:text="佛山市第一人民医院"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/image_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5.0dip"
                        android:src="@mipmap/news_image_unselected"
                        android:layout_toLeftOf="@id/image_2" />

                    <ImageView
                        android:id="@+id/image_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5.0dip"
                        android:src="@mipmap/news_image_unselected"
                        android:layout_toLeftOf="@id/image_3" />

                    <ImageView
                        android:id="@+id/image_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/news_image_unselected"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/image_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:src="@mipmap/news_image_unselected"
                        android:layout_toRightOf="@id/image_3" />

                    <ImageView
                        android:id="@+id/image_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:src="@mipmap/news_image_unselected"
                        android:layout_toRightOf="@id/image_4" />

                    <ImageView
                        android:id="@+id/image_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:src="@mipmap/news_image_unselected"
                        android:layout_toRightOf="@id/image_5" />

                </RelativeLayout>


                <TableLayout
                    android:id="@+id/functable"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="20dip"
                    android:layout_below="@id/change">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:layout_weight="1.0">

                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <!-- 医院特色 -->
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/yiyuanjieshao"
                                    android:layout_width="57.0dip"
                                    android:layout_height="57.0dip"
                                    android:src="@mipmap/mainfunc_yiyuanjianjie"/>

                                <TextView
                                    android:textSize="16.0sp"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dip"
                                    android:text="医院介绍" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <!-- 就医导航 -->
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/menzhenguahao"
                                    android:layout_width="57.0dip"
                                    android:layout_height="57.0dip"
                                    android:src="@mipmap/mainfunc_gengduo"/>

                                <TextView
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dip"
                                    android:text="门诊挂号" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <!-- 预约挂号 -->
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/zaixianjiaofei"
                                    android:layout_width="57.0dip"
                                    android:layout_height="57.0dip"
                                    android:src="@mipmap/mainfunc_guahaoyindao"/>

                                <TextView
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dip"
                                    android:text="在线缴费" />

                            </LinearLayout>

                        </RelativeLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0">

                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <!-- 我的服务 -->
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/dianzibaogao"
                                    android:layout_width="57.0dip"
                                    android:layout_height="57.0dip"
                                    android:src="@mipmap/mainfunc_dianzibaogao" />

                                <TextView
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dip"
                                    android:text="电子报告" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <!-- 操作指南 -->
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/xianshangwenzhen"
                                    android:layout_width="57.0dip"
                                    android:layout_height="57.0dip"
                                    android:src="@mipmap/mainfunc_shishihouzhen"/>

                                <TextView
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dip"
                                    android:text="线上问诊" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.0">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <!-- 更多 -->
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/zaixianzixun"
                                    android:layout_width="57.0dip"
                                    android:layout_height="57.0dip"
                                    android:src="@mipmap/mainfunc_yuyueguahao"/>

                                <TextView
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dip"
                                    android:text="在线咨询" />

                            </LinearLayout>

                        </RelativeLayout>

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

        </FrameLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>