<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DoctorActivity">
    <include
        android:id="@+id/action_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/new_activity_action_bar" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:layout_constraintTop_toBottomOf="@id/action_bar2"
        android:background="@color/light_green"
        android:id="@+id/layout1">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/doc_pic"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/nothing"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doc_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="@id/doc_pic"
            android:layout_marginLeft="20dp"
            android:text="doc_name"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doc_specialist"
            app:layout_constraintTop_toBottomOf="@id/doc_name"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/doc_pic"
            android:layout_marginLeft="20dp"
            android:text="doc_specialist"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/doc_pic"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/doc_good_at"
            android:textSize="15dp"
            android:lines="2"
            android:ellipsize="end"
            android:text="doc_good_at"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RadioGroup
        android:id="@+id/main_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout1">
        <RadioButton
            android:id="@+id/main_radiobutton_guahao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/radio_group_color"
            android:textSize="15sp"
            android:text="预约挂号"
            android:gravity="center"
            android:checked="true"
            android:button="@null"
            android:background="@null"/>
        <RadioButton
            android:id="@+id/main_radiobutton_jianjie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@drawable/radio_group_color"
            android:textSize="15sp"
            android:text="个人简介"
            android:gravity="center"
            android:button="@null"
            android:background="@null"/>
    </RadioGroup>
    <FrameLayout
        android:id="@+id/about_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_radiogroup"/>
</androidx.constraintlayout.widget.ConstraintLayout>