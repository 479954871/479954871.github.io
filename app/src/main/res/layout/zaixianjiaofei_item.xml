<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="缴费通知"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_n_time"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:text="时间："/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keshi"
        app:layout_constraintTop_toBottomOf="@id/date_n_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:text="科室:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doc_name"
        app:layout_constraintTop_toBottomOf="@id/keshi"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:text="医生:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jiuzhenren"
        app:layout_constraintTop_toBottomOf="@id/doc_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:text="就诊人:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fee"
        app:layout_constraintTop_toBottomOf="@id/jiuzhenren"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:text="金额:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data"
        app:layout_constraintTop_toBottomOf="@id/fee"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:text="data:"/>

</androidx.constraintlayout.widget.ConstraintLayout>